umask 0007
set bell-style off

PS1='[\u@\h:\[\e[0;32m\]${E}\[\e[m\] \W]\$ '
export PS1

        PAGER=less
       EDITOR=vim
         LESS="-R"
 GREP_OPTIONS='--color=auto'
     CLICOLOR=1
       LC_ALL=en_US.UTF-8
         LANG=en_US.UTF-8
export EDITOR PAGER LESS GREP_OPTIONS CLICOLOR LC_ALL LANG

# platform: ruby, redis
          PLAT=/opt/fmw/platform
    RBENV_ROOT=${PLAT}/rbenv
export PLAT RBENV_ROOT

     JAVA_HOME=${PLAT}/java7/current
    REPOS_HOME=/opt/install/dwpbank/iam-base/iam-11.1.2.2/repo/installers
   IDMLCM_HOME=/opt/fmw/lcm
      DEPLOYER=/opt/fmw/iam-deployer
export REPOS_HOME IDMLCM_HOME JAVA_HOME DEPLOYER

# DPATH keeps the common path, JAVA_HOME is individually set per app
# however, we need one in common too
DPATH=/usr/local/sbin:/usr/sbin:/sbin:/usr/local/bin:/usr/bin:/bin
DPATH=${HOME}/bin:${RBENV_ROOT}/bin:${DPATH}
PATH=${DPATH}:${JAVA_HOME}/bin
export PATH DPATH

eval "$(rbenv init -)"

function   acc() { export E=acc  ; . ~/.env/acc.env   ; }
function   dir() { export E=dir  ; . ~/.env/dir.env   ; }
function   idm() { export E=idm  ; . ~/.env/idm.env   ; }
function   web() { export E=web  ; . ~/.env/web.env   ; }
function   dbs() { export E=dbs  ; . ~/.env/dbs.env   ; }
# TODO: dwp-dir, connectors

function e() {
  echo
  echo -e "\e[36mAvailable Envs:  \e[31macc  dir  idm  web  dbs\e[0m"
  if [ -n ${E} ] ; then
    echo " Currently:  E=${E}"
    echo "   ORACLE_HOME=${ORACLE_HOME}"
    echo "   DOMAIN_HOME=${DOMAIN_HOME}"
    echo "       --------------------"
    echo " aliases:"
    echo -e "\e[31m   gh \e[0m... goto oracle home"
    echo -e "\e[31m  gch \e[0m... goto oracle common"
    echo -e "\e[31m   gd \e[0m... goto domain home"
    echo -e "\e[31m   gl \e[0m... goto domain log"
    echo
    echo -e " type \e[31me\e[0m for this message"
    echo
  fi
}

alias    l='ls -lF'
alias   ll='ls -lF'
alias   la='ls -laF'
alias   vi=vim
alias   gh='cd ${ORACLE_HOME}; pwd'
alias  gch='cd ${ORACLE_COMMON}; pwd'
alias   gd='cd ${DOMAIN_HOME:-$INST_HOME}; pwd'
alias   gl='cd ${DOMAIN_LOG:-$INST_LOG}; pwd'

