umask 0007
set bell-style off

PS1='[\e[0;31m\u\[\e[m\]@\h:\[\e[0;32m\]${E}\[\e[m\] \W]\$ '
export PS1

        PAGER=less
       EDITOR=vim
         LESS="-R"
 GREP_OPTIONS='--color=auto'
     CLICOLOR=1
       LC_ALL=en_US.UTF-8
         LANG=en_US.UTF-8
export EDITOR PAGER LESS GREP_OPTIONS CLICOLOR LC_ALL LANG

       HOSTENV=_HOSTENV_
   ORACLE_BASE=_IAMTOP_
      LOG_BASE=_IAMLOG_
     JAVA_HOME=${ORACLE_BASE}/products/identity/jdk/current
    REPOS_HOME=/mnt/oracle/iam-11.1.2.2/repo/installers
   IDMLCM_HOME=${ORACLE_BASE}/lcm
      DEPLOYER=/vagrant
export HOSTENV ORACLE_BASE LOG_BASE REPOS_HOME IDMLCM_HOME JAVA_HOME DEPLOYER

# DPATH keeps the common path, JAVA_HOME is individually set per app
# however, we need one in common too
DPATH=${HOME}/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/local/bin:/usr/bin:/bin
PATH=${DPATH}:${JAVA_HOME}/bin
export PATH DPATH

#function acc() { export E=acc  ; . ${HOSTENV}/env/acc.env ; }
#function dir() { export E=dir  ; . ${HOSTENV}/env/dir.env ; }
function idm() { export E=idm  ; . ${HOSTENV}/env/idm.env ; }
function web() { export E=web  ; . ${HOSTENV}/env/web.env ; }
function dbs() { export E=dbs  ; . ${HOSTENV}/env/dbs.env ; }

function e() {
  echo
  echo -e "\e[36mAvailable Envs:  \e[31macc  dir  idm  web  dbs\e[0m"
  if [ -n ${E} ] ; then
    echo " Currently:  E=${E}"
    echo "   ORACLE_HOME=${ORACLE_HOME}"
    echo "   DOMAIN_HOME=${DOMAIN_HOME}"
    echo "       --------------------"
    echo " aliases:"
    echo -e "\e[31m   gh \e[0m... goto oracle home"
    echo -e "\e[31m  gch \e[0m... goto oracle common"
    echo -e "\e[31m   gd \e[0m... goto domain home"
    echo -e "\e[31m   gl \e[0m... goto domain log"
    echo
    echo -e " type \e[31me\e[0m for this message"
    echo
  fi
}

alias    l='ls -lF'
alias   ll='ls -lF'
alias   la='ls -laF'
alias   vi=vim
alias   gh='cd ${ORACLE_HOME}; pwd'
alias  gch='cd ${ORACLE_COMMON}; pwd'
alias   gd='cd ${DOMAIN_HOME:-$INST_HOME}; pwd'
alias   gl='cd ${DOMAIN_LOG:-$INST_LOG}; pwd'

