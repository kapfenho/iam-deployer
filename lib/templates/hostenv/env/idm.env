# oracle home: binaries and apps
      APP_SERVER=weblogic
         MW_HOME=${ORACLE_BASE}/products/identity
         WL_HOME=${MW_HOME}/wlserver_10.3
     ORACLE_HOME=${MW_HOME}/iam
   ORACLE_COMMON=${MW_HOME}/oracle_common
 OIM_ORACLE_HOME=${ORACLE_HOME}
export APP_SERVER MW_HOME WL_HOME ORACLE_HOME ORACLE_COMMON OIM_ORACLE_HOME

# java settings
             JAVA_HOME=${ORACLE_BASE}/products/identity/jdk/current
              ANT_HOME=${MW_HOME}/modules/org.apache.ant_1.7.1
           JAVA_VENDOR=Oracle
       PRODUCTION_MODE=true
DOMAIN_PRODUCTION_MODE=true
export JAVA_HOME JAVA_VENDOR PRODUCTION_MODE DOMAIN_PRODUCTION_MODE ANT_HOME

# instances
        DOMAIN=__DOMAIN_NAME__
    ADMIN_HOME=${ORACLE_BASE}/config/domains/${DOMAIN}
      WRK_HOME=${ORACLE_BASE}/services/domains/${DOMAIN}
   DOMAIN_HOME=${WRK_HOME}
    DOMAIN_LOG=${LOG_BASE}/${DOMAIN}
      IDM_PROP=${HOSTENV}/env/identity.prop
export DOMAIN ADMIN_HOME DOMAIN_HOME WRK_HOME DOMAIN_LOG IDM_PROP

# path
PATH=${DPATH}:${JAVA_HOME}/bin:${ORACLE_HOME}/bin:${ANT_HOME}/bin
export PATH

# wlst with domain properties
alias       wlst='rlwrap ${WL_HOME}/common/bin/wlst.sh -loadProperties ${IDM_PROP}'
alias wlst-imint='rlwrap ${WL_HOME}/common/bin/wlst.sh -loadProperties ${HOSTENV}/env/imint.prop'
# follow logs
alias nodelogs='tail -F ${LOG_BASE}/nodemanager/*'
alias  srvlogs='tail -F ${DOMAIN_LOG}/AdminServer/AdminServer.out ${DOMAIN_LOG}/wls_soa1/wls_soa1.out ${DOMAIN_LOG}/wls_oim1/wls_oim1.out'

unset       INSTANCE
unset      INST_HOME
unset       INST_LOG

E=idm
export E

deploy() {
  . ${WL_HOME}/server/bin/setWLSEnv.sh
  java weblogic.WLST -loadProperties ${HOSTENV}/env/${1}.prop ${HOSTENV}/lib/deploy.py
}

